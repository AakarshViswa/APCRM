@model CustomerViewModel
@{
    ViewData["Title"] = "Create - Customer Management";
}

<div class="pagetitle">
    <h1>Create Customer</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="Index">Customer Management</a></li>
            <li class="breadcrumb-item active"> Edit Customer </li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="card">
        <div class="card-body">
            <partial name="_NotificationPartial"></partial>
            <h5 class="card-title">
                New Customer Details
            </h5>

            <form method="post">
                <div class="row mb-3">
                  <label asp-for="Customer.CustomerName" class="col-sm-2 col-form-label">Customer Name</label>
                  <div class="col-sm-10">
                    <input  asp-for="Customer.CustomerName" type="text" class="form-control">
                    <input type="hidden" asp-for="Customer.Id" />
                    <input type="hidden" asp-for="Customer.CustomerID" />
                  </div>
                </div>
                <div class="row mb-3">
                  <label asp-for="Customer.CouplesName" class="col-sm-2 col-form-label">Couples Name(If Applicable)</label>
                  <div class="col-sm-10">
                    <input  asp-for="Customer.CouplesName" type="text" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label asp-for="Customer.EmailAddress" class="col-sm-2 col-form-label">Email</label>
                  <div class="col-sm-10">
                    <input asp-for="Customer.EmailAddress" type="email" class="form-control">
                  </div>
                </div>   
                <div class="row mb-3">
                  <label asp-for="Customer.PrimaryPhoneNumber" class="col-sm-2 col-form-label">Phone 1 #</label>
                  <div class="col-sm-10">
                    <input asp-for="Customer.PrimaryPhoneNumber" type="text" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label asp-for="Customer.SecondaryPhoneNumber" class="col-sm-2 col-form-label">Phone 2 #</label>
                  <div class="col-sm-10">
                    <input asp-for="Customer.SecondaryPhoneNumber" type="text" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label asp-for="Customer.Reference" class="col-sm-2 col-form-label">Reference</label>
                  <div class="col-sm-10">
                    <input asp-for="Customer.Reference" type="text" class="form-control">
                  </div>
                </div>
               
                <div class="row">                  
                  <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary float-end">Save Customer / Lead</button>
                  </div>
                </div>

              </form>

        </div>
    </div>
</section>