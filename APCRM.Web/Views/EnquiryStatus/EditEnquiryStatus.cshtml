@model EnquiryStatusViewModel
@{
    ViewData["Title"] = "Edit Enquiry Status / Enquiry Status Management";
}

<div class="pagetitle">
    <h1>Edit Event Type - Event Type Management</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Settings" asp-action="Index">Settings</a></li>
            <li class="breadcrumb-item"><a asp-controller="EnquiryStatus" asp-action="Index">Enquiry Status Management</a></li>
            <li class="breadcrumb-item active"> Edit Enquiry Status </li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="card">
        <div class="card-body">
            <div class="row mt-3">                
                <div class="col-sm-12">
                    <form method="post">
                        <div class="row mb-3">
                            <label asp-for="enquiryStatus.Name" class="col-sm-2 form-label">Enquiry Status Name</label>
                            <div class="col-sm-10">
                                <input asp-for="enquiryStatus.Name" type="text" class="form-control">
                                <input asp-for="enquiryStatus.Id" type="hidden" class="form-control">                                
                                <input asp-for="enquiryStatus.OrderBy" type="hidden" class="form-control">                               
                                
                            </div>
                        </div>
                        <div class="text-center float-end">
                            <button type="submit" class="btn btn-primary">Update Changes</button>
                            <button asp-controller="EventType" asp-action="Index" class="btn btn-secondary">Back</button>
                        </div>
                    </form>
                </div>               
            </div>
        </div>
    </div>
</section>

