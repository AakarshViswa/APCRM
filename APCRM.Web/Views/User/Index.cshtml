
@model UserViewModel

@{
    ViewData["Title"] = "Settings / User Management ";
}
<div class="pagetitle">
    <h1>Users</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Settings" asp-action="Index">Settings</a></li>
            <li class="breadcrumb-item active"> User Management </li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="card">
        <div class="card-body">
            <partial name="_NotificationPartial"></partial>

            <h5 class="card-title">
                Users Details <button type="button" class="btn btn-success rounded-pill float-end"> <i class="bi bi-plus-square"></i> Add User</button>
            </h5>

            <table class="table table-striped datatable">
                <thead>
                    <tr>
                        <th scope="col"> </th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Phone #</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.UsersList)
                    {
                        <tr>
                            <td> <img src="data:image/jpeg;base64,@obj.Photo" alt="Profile" class="rounded-circle" style="max-height:44px;width:44px"> </td>
                            <td>@obj.FullName</td>
                            <td>@obj.Email</td>
                            <td>@obj.PhoneNumber</td>
                            <td>
                                <button class="btn btn-info rounded-pill" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Map Role"> <i class="bi bi-pin-angle-fill"></i></button>
                                <button class="btn btn-success rounded-pill" asp-controller="Settings" asp-action="EditRole" asp-route-id="@obj.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Edit User"> <i class="bi bi-pencil-square"></i></button>
                                <button class="btn btn-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#DeleteConfirmation_@obj.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Delete User"> <i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                        @* <div class="modal fade" id="DeleteConfirmation_@obj.Id" tabindex="-1" aria-hidden="true" style="display: none;">
                            <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                            <div class="modal-header">
                            <h5 class="modal-title">Vertically Centered</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                            Do you want to Delete the Event - @obj.Id
                            </div>
                            <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <a type="button" class="btn btn-danger" asp-controller="Settings" asp-action="DeleteRole" asp-route-id="@obj.Id">Delete</a>
                            </div>
                            </div>
                            </div>
                            </div>*@
                    }
                </tbody>
            </table>
            @*END EVENT TYPE TABLE*@
        </div>
    </div>
</section>