@model WorkStatusViewModel
@{
    ViewData["Title"] = "Work Status Management";
}

<div class="pagetitle">
    <h1>Package Management</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Settings" asp-action="Index">Settings</a></li>
            <li class="breadcrumb-item"><a asp-controller="WorkStatus" asp-action="Index"> Work Status Management</a></li>
            <li class="breadcrumb-item active"> Edit Work Status Management </li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Work Status</div>
            <form method="post" asp-controller="WorkStatus" asp-action="EditWorkStatus">
                <div class="modal-body">
                    <div class="row g-3">

                        <div class="col-md-12">
                            <div class="form-floating">
                                <input type="hidden" asp-for="EditWorkStatus.WorkStatusId" />
                                <input type="text" class="form-control" asp-for="EditWorkStatus.StatusName" placeholder="Work Status Name" required>
                                <label asp-for="EditWorkStatus.StatusName">Work Status Name</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-floating">
                                <select asp-for="EditWorkStatus.WorkPhaseId" class="form-select" required>
                                    <option disabled value="">Select a Work Phase</option>
                                    @foreach (var obj1 in Model.workPhases)
                                    {
                                        <option value="@obj1.Id">@obj1.WorkPhaseName - @obj1.WorkPhaseCode</option>
                                    }
                                </select>
                                <label asp-for="EditWorkStatus.WorkPhaseId">Work Phase</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <select asp-for="EditWorkStatus.ColorCode" class="form-select" required>
                                    <option disabled value="" selected>Select a Color Code</option>
                                    <option value="badge bg-primary">Blue</option>
                                    <option value="badge bg-success">Green</option>
                                    <option value="badge bg-danger">Red</option>
                                    <option value="badge bg-warning text-dark">Yellow</option>
                                    <option value="badge bg-info text-dark"> Cyan</option>
                                </select>
                                <label asp-for="EditWorkStatus.ColorCode">Color Code</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save Work Status</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>